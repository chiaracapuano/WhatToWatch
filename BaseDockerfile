FROM python:3.7.6-buster
COPY ./.dockerignore /app/
WORKDIR /app
RUN pip install --upgrade pip
RUN pip install spacy
RUN python -m spacy download en_core_web_lg

EXPOSE 5000
CMD python ./main.py


